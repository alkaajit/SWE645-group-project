node {

    stage('Checkout') {
      echo "Checkout code in progress...."
      checkout scm
    }


    stage('Build') {
        echo "Building in progress...."
        def antHome = tool 'LocalAnt'
	if(isUnix()){
	  	env.PATH = "${antHome}/bin;${env.PATH}"
		echo "${env.PATH}"
          	sh "${antHome}/bin/ant"
	}
	else
	{
        	env.PATH = "${antHome}\\bin;${env.PATH}"
        	bat "ant"
	}
    }
    
     stage('Create image') {
	     def newApp
	     def registry = 'registry.hub.docker.com'
	     def registryCredential = 'swe645group'
	     def buildHome = 'swe645group/swe645_hw2'
		docker.withRegistry( 'https://' + registry, registryCredential ) {
			    def buildName = buildHome + ":$BUILD_NUMBER"
				newApp = docker.build buildName
				newApp.push()
				buildName = buildHome + ":latest"
				newApp = docker.build buildName
				newApp.push()
    	}
    }
    
    stage('Deploy') {
     withKubeConfig([credentialsId: 'rancher-login', serverUrl: 'https://ec2-3-237-11-24.compute-1.amazonaws.com/k8s/clusters/c-8svkm']) {
     template = `cat swe-645-1.yaml | sed "s/{buildNumber}/$BUILD_NUMBER/g"`
     echo "$template" | kubectl apply -f -
    }
    }
}
